@import uk.gov.hmrc.advancevaluationrulings.models.application.Application

@this(
    line: Line,
    addressLine: AddressLine
)

@(application: Application)(implicit messages: Messages)


<fo:block-container>

    <fo:block role="H2" id="trader-details" font-size="18pt" font-weight="bold" margin-bottom="0.5cm" margin-top="1cm">

        @messages("pdf.traderDetail")

    </fo:block>

    @line(messages("pdf.trader.businessName"), application.trader.businessName)

    @addressLine(messages("pdf.trader.address"), application.trader.addressLines.mkString("\n"))

    @if(application.agent.isEmpty) {

        @line(messages("pdf.applicantName"), application.contact.name)

        @line(messages("pdf.applicantEmail"), application.contact.email)

        @application.contact.phone.map { phone =>
            @line(messages("pdf.applicantPhone"), phone)
        }
    }

</fo:block-container>
